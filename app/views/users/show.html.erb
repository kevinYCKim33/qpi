<div class="content-wrapper">
  <h1 class="name_heading"><%= @user.name %></h1>
  <p style="color:red"><%= flash[:error] %></p>
  <p style="color:green"><%= flash[:message] %></p>

  <div>
    <div class="block_top50px">
      <div class="w-row">
        <div class="w-col w-col-4">
          <%# binding.pry %>
          <%= render '/users/profile_pic', user: @user %>
          <%= render '/users/social_media', user: @user %>
        </div>
        <div class="w-col w-col-8">
          <div class="profile_block">
            <div class="basic-info w-row">
              <div class="w-col w-col-5">
                <h3 class="profile_heading">Location</h3>
              </div>
              <div class="w-col w-col-7">
                <div class="profile_text"><%= @user.location %></div>
              </div>
            </div>
            <div class="basic-info w-row">
              <div class="w-col w-col-5">
                <h3 class="profile_heading">Occupation</h3>
              </div>
              <div class="w-col w-col-7">
                <div class="profile_text"><%= @user.occupation %></div>
              </div>
            </div>
            <div class="basic-info w-row">
              <div class="w-col w-col-5">
                <h3 class="profile_heading">Grade</h3>
              </div>
              <div class="w-col w-col-7">
                <div class="profile_text"><%= @user.grade %></div>
              </div>
            </div>
            <div class="basic-info w-row">
              <div class="w-col w-col-5">
                <h3 class="profile_heading">SCHOOL</h3>
              </div>
              <div class="w-col w-col-7">
                <div class="profile_text"><%= @user.school %></div>
              </div>
            </div>
          </div>
          <%= render 'email_or_edit_button', user: @user %>
        </div>
      </div>
    </div>
  </div>
</div>
