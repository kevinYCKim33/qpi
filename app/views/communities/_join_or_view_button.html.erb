<% if current_user.member?(community) %>
  <%= link_to 'VIEW COMMUNITY', community, class: "button_hollow_green full_width w-button", style: "text-align: center; background: inherit";%>
<% else %>
  <%= form_with url: community_users_path do |f| %>
    <%= f.hidden_field :community_id, value: community.id %>
    <%= f.submit "JOIN COMMUNITY", class: "button_green full_width w-button" %>
  <% end %>
<% end %>
